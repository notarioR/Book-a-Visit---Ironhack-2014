
<%= form_for [@onereservation] do |f| %>
  
  <%= f.text_field :title, :placeholder => "Title", required: true %>
  <br>
  
  <%= f.text_field :phone, :placeholder => "Phone" %>
  <br>
  
  <%= f.text_field :email, :placeholder => "email", required: true%>
  <br>
  
  <%= f.text_field :members, :placeholder => "members" %>
  <br>
  
  <%= f.date_field :date, :placeholder => "date", required: true %>
  <br>
  <%= f.submit 'Save', :class => 'submit_class_reservation_home' %>

  <% end %>

