
 <h1>Visit new</h1>
<%= form_for [@visit] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :turn %>
  <%= f.select :turn, options_for_select([['Morning', false],['Afternoon', true]]) %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <br>
  <%= f.submit 'Save' %>
  <%= link_to 'Cancel', '/' %>
 <% end %>

