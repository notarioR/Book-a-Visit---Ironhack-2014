 <div class="area">
 <h1>Event new</h1>

<%= form_for [:admin, @event] do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <br> 
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br>
  <%= f.label :date %>
  <%= f.date_field :date, required: true %>
  <br>
  <%= f.submit 'Save' %>
  <%= link_to 'Cancel', '/' %>
 <% end %>
</div>
